<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:orientation="horizontal"
        android:weightSum="100">

        <Button
            android:id="@+id/bFisEkle"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:text="Yeni Fis Ekle"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bFislerim"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:text="Fislerim"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bAyarlar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="6dp"
            android:background="@android:drawable/ic_menu_manage" />

        <Button
            android:id="@+id/bCikis"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="6dp"
            android:background="@android:drawable/btn_dialog" />
    </LinearLayout>

    <EditText
        android:id="@+id/search_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:gravity="center_vertical"
        android:hint="Ara..."
        android:paddingLeft="8dp"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/butunFaturalar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Faturalar Listesi"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textSize="36sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/fisListesi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>
</LinearLayout>